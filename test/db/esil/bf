NAME=hello world
FILE=bins/bf/hello-ok.bf
ARGS=-b32
CMDS=<<EOF
e asm.arch=bf
e asm.bytes=true
e analysis.arch=bf
s 0
aezi
aezs 390
EOF
EXPECT=<<EOF
Hello World!
EOF
RUN

NAME=hello world - unbalanced loop
FILE=bins/bf/hello-unbalanced-loop.bf
ARGS=-b32
CMDS=<<EOF
e asm.arch=bf
e asm.bytes=true
e analysis.arch=bf
e scr.utf8=false
s 0
pd 3 @ 0xa
EOF
EXPECT=<<EOF
            0x0000000a      5b             while [ptr]
            0x0000000b      3e             inc   ptr
            0x0000000c      2b             inc   [ptr]
EOF
RUN

NAME=loopy hello world
FILE=bins/bf/hello-loops.bf
ARGS=-b32
CMDS=<<EOF
s 0
aezi
aezs 906
EOF
EXPECT=<<EOF
Hello World!
EOF
RUN
